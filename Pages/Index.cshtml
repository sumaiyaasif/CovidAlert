@page
@model Covid_Alert.Pages.IndexModel

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.statesInfo.First().state)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statesInfo.First().positive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statesInfo.First().recovered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statesInfo.First().death)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.statesInfo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.positive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.recovered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.death)
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
